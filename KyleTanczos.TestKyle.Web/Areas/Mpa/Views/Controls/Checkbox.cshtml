        <div class="md-checkbox @Model.ContainerCustomCssClass">
        @*<div class="@Model.ContainerCustomCssClass">*@
            <input id="@Model.ClientId" class="md-check @Model.ControlCustomCssClass" type="checkbox" value="true" @Model.CustomAttributes @Model.NgModel>
